{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://quikkart-1.onrender.com/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/"
    }
  ]
}
