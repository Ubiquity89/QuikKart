{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(?<path>.*)",
      "dest": "https://quikkart-1.onrender.com/$path"
    },
    {
      "src": "^/(.*)",
      "dest": "/index.html"
    }
  ]
}
